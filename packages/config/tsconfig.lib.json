{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "lib": ["ES2015", "DOM"],
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "build", "coverage", "test", "tests"],
}
